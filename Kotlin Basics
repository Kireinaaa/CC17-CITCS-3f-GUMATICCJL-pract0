fun main() {
    // Conversion of pounds to kilograms
    val pounds = 150.0
    val kilograms = pounds * 0.453592
    println("Initial weight: $pounds lbs")
    println("Converted weight: $kilograms kg")

    // Conversion of miles to kilometers
    val miles = 100.0
    val kilometers = miles * 1.60934
    println("Initial distance: $miles mi")
    println("Converted distance: $kilometers km")

    // Conversion of Fahrenheit to Celsius
    val fahrenheit = 98.6
    val celsius = (fahrenheit - 32) * 5 / 9
    println("Initial temperature: $fahrenheit °F")
    println("Converted temperature: $celsius °C")

    // Average age calculation
    val ages = listOf(18, 20, 22, 19, 21, 20, 23, 22, 19, 21)
    val averageAge = ages.average()
    println("Ages of students: $ages")
    println("Average age: $averageAge")

    // Fantasy story
    val character1 = "Eldrin"
    val character2 = "Lyra"
    val character3 = "Thorin"
    val equipment = "Ancient Sword"
    val item = "Healing Potion"
    val ability = "Fireball"

    val story = """
        In the mystical land of Eldoria, a brave warrior named $character1 embarked on a quest.
        Accompanied by the skilled archer $character2 and the wise mage $character3, they sought the fabled $equipment.
        Along their journey, they discovered a hidden cave where they found a $item.
        With the power of $ability, they fought fierce monsters and uncovered ancient secrets.
        Together, they forged an unbreakable bond and became legends in their own right.
    """.trimIndent()

    println(story)
}
